<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<!-- 1.2标签主题，简单风格 -->
	<constant name="struts.ui.theme" value="simple"></constant>
	<!-- 
		<constant name="struts.objectFactory" value="spring"/>
	 -->
	<package name="common" namespace="/" extends="struts-default">
	
	<!-- 全局结果集定义 -->
		<global-results>
			<result name="login">/WEB-INF/views/index.jsp</result>
		</global-results>
		
		<action name="login" class="com.honganwei.action.LoginAction" >
		</action>
		
		<!-- 	action.class 默认值：ActionSupport
				action.method 默认值：execute
				result.name 默认值：success
					 -->
		
		<action  name="uiAction_*_*">
			<result>/WEB-INF/views/{1}/{2}.jsp</result>
		</action>
	</package>
</struts>