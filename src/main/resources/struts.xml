<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="false" />
	<!-- 1.2标签主题，简单风格 -->
	<constant name="struts.ui.theme" value="simple"></constant>
	<!-- 
		<constant name="struts.objectFactory" value="spring"/>
	 -->
	<package name="common" namespace="/" extends="struts-default">
	
	<!-- 全局结果集定义 -->
		 <global-results>
			<result name="login">/WEB-INF/views/manage.jsp</result>
		</global-results>
		
		<action name="mailWrite" class="com.honganwei.action.EmailAction" method="writeEmail">
			<result name="write">/WEB-INF/views/writeEmail.jsp</result>
		</action>
		
		<action  name="uiAction_*_*">
			<result>/WEB-INF/views/{1}/{2}.jsp</result>
		</action>
		
	</package>

	<package name="UserLogin" namespace="/" extends="struts-default">
		<action name="userAction_*" class="com.honganwei.action.LoginAction" method="{1}">
			<result name="login" >/WEB-INF/views/manage.jsp</result>
		</action>
	</package> 

	<package name="email" namespace="/email" extends="struts-default">
		
		<action name="write" class="com.honganwei.action.EmailAction" method="writeEmail">
			<result name="write">/WEB-INF/views/email/writeEmail.jsp</result>
		</action>
		
	</package>
	
	<include file="struts2/stuts2-tuser.xml"></include>
				  
</struts>